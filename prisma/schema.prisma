generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id          String   @id @default(cuid())
  code        String
  title       String?
  description String?
  language    String   @default("javascript")
  createdAt   DateTime @default(now())
  expiresAt   DateTime  @default(dbgenerated("now() + interval '7 days'")) // Default 7-day expiration
  views       Int      @default(0)
  isPublic    Boolean  @default(true)

  @@index([createdAt])
  @@index([isPublic])
  @@index([expiresAt])
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  files       Json     @default("[]") // Array of {id, path, name, code, language}
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  views       Int      @default(0)
  isPublic    Boolean  @default(true)
  deletionToken String?
  expiresAt   DateTime? // Optional expiration date for project

  @@index([createdAt])
  @@index([isPublic])
  @@index([expiresAt])
}
