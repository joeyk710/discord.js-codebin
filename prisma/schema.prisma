generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paste {
  id          String   @id @default(cuid())
  code        String
  title       String?
  description String?
  language    String   @default("javascript")
  createdAt   DateTime @default(now())
  views       Int      @default(0)
  isPublic    Boolean  @default(true)

  @@index([createdAt])
  @@index([isPublic])
}

model Project {
  id          String        @id @default(cuid())
  title       String
  description String?
  projectFiles ProjectFile[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  views       Int           @default(0)
  isPublic    Boolean       @default(true)

  @@index([createdAt])
  @@index([isPublic])
}

model ProjectFile {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  path      String   // e.g., "src/index.ts", "README.md"
  name      String   // e.g., "index.ts"
  code      String
  language  String   @default("javascript")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, path])
  @@index([projectId])
}
